{
  "name": "Docker-Deploy",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/Database  && npx prisma generate && cd ../..",
    "start:web": "cd apps/web && pnpm run dev",
    "start:http-backend": "cd apps/http-backend && pnpm run dev",
    "start:ws-backend": "cd apps/ws-backend && pnpm run dev"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
